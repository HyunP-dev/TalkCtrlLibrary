<UserControl x:Class="TalkCtrlLibrary.DateBadgeItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TalkCtrlLibrary"
             mc:Ignorable="d" Height="26" Margin="10">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <TextBlock Panel.ZIndex="2" Name="DateTextView" Text="" HorizontalAlignment="Center" Padding="8 4 8 8" Margin="2"/>
        <Rectangle Panel.ZIndex="1" Fill="#b1c3d5" Margin="{Binding Margin,ElementName=MsgContentView}" 
        RadiusX="13" RadiusY="13"
        Width="{Binding Width,ElementName=DateTextView}" 
        Height="{Binding ActualHeight,ElementName=DateTextView}" 
        Stroke="#b1c3d5"
        StrokeThickness="3"
        VerticalAlignment="Top"/>
    </Grid>
</UserControl>
